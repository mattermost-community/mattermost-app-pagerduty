    "axios": "^0.27.2",
    "body-parser": "^1.20.0",
    "client-oauth2": "^4.3.3",
    "dotenv": "^16.0.1",
    "express": "^4.18.1",
    "i18n": "^0.15.1",
    "lodash": "^4.17.21",
    "morgan": "^1.10.0",
    "query-string": "^7.1.1",
