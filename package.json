    "start": "tsc -p . && cp -r src/locales dist/ && node dist/index.js",
    "dev": "ts-node-dev src/index.ts",
    "lint": "eslint --ignore-pattern node_modules --ignore-pattern dist --ext ts . --quiet --cache",
