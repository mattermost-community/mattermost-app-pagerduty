    "@types/lodash": "^4.14.182",
    "@types/morgan": "^1.9.3",
    "@types/node-fetch": "^2.6.2",
    "eslint": "^8.29.0",
    "eslint-import-resolver-typescript": "^3.5.2",
    "eslint-plugin-import": "^2.26.0",
    "node-fetch": "^2.6.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.6.4",
    "ts-node": "^10.7.0"
  }
